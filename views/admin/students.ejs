<!DOCTYPE html>
<html>
<head>
  <title>Manage Students</title>
  <link rel="stylesheet" href="/assests/bootstrap/css/bootstrap.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-4">
    <h2>Students</h2>
    <form method="POST" action="/admin/add-student" class="row g-3 mb-4">
      <div class="col-md-3">
        <input type="text" name="name" placeholder="Name" class="form-control" required>
      </div>
      <div class="col-md-3">
        <input type="email" name="email" placeholder="Email" class="form-control" required>
      </div>
      <div class="col-md-3">
        <input type="password" name="password" placeholder="Password" class="form-control" required>
      </div>
      <div class="col-md-3">
        <button type="submit" class="btn btn-info">Add Student</button>
      </div>
    </form>

    <table class="table table-bordered">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% students.forEach(student => { %>
          <tr>
            <td><%= student.name %></td>
            <td><%= student.email %></td>
            <td>
              <a href="/admin/delete-student/<%= student.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Delete student?')">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <a href="/admin/dashboard" class="btn btn-secondary mt-3">Back to Dashboard</a>
  </div>
</body>
</html>
