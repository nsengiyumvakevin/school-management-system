<!DOCTYPE html>
<html>
<head>
  <title>Manage Subjects</title>
  <link rel="stylesheet" href="/assests/bootstrap/css/bootstrap.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-4">
    <h2>Subjects</h2>
    <form method="POST" action="/admin/add-subject" class="row g-3 mb-4">
      <div class="col-md-3">
        <input type="text" name="name" placeholder="Subject Name" class="form-control" required>
      </div>
      <div class="col-md-4">
        <input type="text" name="description" placeholder="Description" class="form-control" required>
      </div>
      <div class="col-md-3">
        <select name="teacher_id" class="form-select" required>
          <option value="">-- Assign to Teacher --</option>
          <% subjects.forEach(subject => { %>
            <% if (!teacher_ids || !teacher_ids.includes(subject.teacher_id)) { %>
              <option value="<%= subject.teacher_id %>"><%= subject.teacher_name %></option>
            <% } %>
          <% }) %>
        </select>
      </div>
      <div class="col-md-2">
        <button type="submit" class="btn btn-success">Add Subject</button>
      </div>
    </form>

    <table class="table table-bordered">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Teacher</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% subjects.forEach(subject => { %>
          <tr>
            <td><%= subject.name %></td>
            <td><%= subject.description %></td>
            <td><%= subject.teacher_name || 'Unassigned' %></td>
            <td>
              <a href="/admin/delete-subject/<%= subject.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Delete subject?')">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <a href="/admin/dashboard" class="btn btn-secondary mt-3">Back to Dashboard</a>
  </div>
</body>
</html>
